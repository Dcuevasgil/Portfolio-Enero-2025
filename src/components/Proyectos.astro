---
import infoProyectos from '../datos/proyectos.json'

// Extraer el título de la sección desde el primer elemento
const nombreSeccion = infoProyectos?.nombreSeccion || 'Sección';
---

<div class="w-5/6 ml-[16.66%] min-h-full bg-gray-100">
  <h1 id="proyectos" class="text-3xl md:text-4xl font-bold mb-10 ml-5 text-left text-slate-600 mt-16">{nombreSeccion}</h1>
  <div class="p-8 mr-6 ml-6 bg-white shadow-md rounded-lg">
    <div class="space-y-8">
      {infoProyectos.experiences.map((item) => (
        <div class="relative flex items-start space-x-4 mb-8 max-w-[90%] mx-auto space-y-6" key={item.nombre}>
          <!-- Imagen del proyecto a la izquierda -->
          <img
            src={item.imagen}
            alt={item.nombre}
            class="w-[30%] h-auto object-cover rounded-md mr-[1cm]"
          />
          <div class="flex flex-col space-y-4 mt-4 w-[65%]">
            <span class="text-lg uppercase text-gray-400 font-thin">{item.lenguajeProgramacion}</span>
            <h3 class="text-3xl font-bold leading-tight">{item.nombre}</h3>
            <div class="flex items-center text-gray-500 text-sm mt-4">
              <!-- Foto de perfil del autor -->
              <img
                src={item.imagenAutor}
                alt={`Foto de ${item.autor}`}
                class="w-10 h-10 object-cover"
              />
              <span class="ml-2 uppercase">{item.autor}</span>
              <span class="ml-auto">{item.fechaProyecto}</span>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</div>
