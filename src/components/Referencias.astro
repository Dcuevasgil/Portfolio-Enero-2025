---
import infoReferencias from '../datos/referencias.json';
---

<div class="w-5/6 ml-[16.66%] min-h-full bg-gray-100">
    <h1 id="referencias" class="text-3xl md:text-4xl font-bold mb-10 ml-5 mt-10 text-left text-slate-600">Referencias</h1>
    <div class="bg-gray-100 py-10">
      <div class="max-w-[70%] mx-auto bg-white p-8 flex gap-20">
        {infoReferencias.contactos.map((contacto, index) => (
          <div class="flex-1" key={index}>
            <h2 class="text-lg font-bold text-[#4B5563]">{contacto.nombre}</h2>
            <h3 class="text-sm font-semibold text-gray-600 mt-1 mb-4">
              {contacto.puesto}<br />
              <span class="font-normal">{contacto.empresa}</span>
            </h3>
            <p class="text-lg text-gray-700 leading-6 mr-44">{contacto.referencia}</p>
          </div>
        ))}
      </div>
    </div>
</div>